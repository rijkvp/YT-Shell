{
  "manifest_version": 2,
  "name": "YT-Shell",
  "description": "YT-Shell is a browser extension which lets you stay focused while using YouTube. Block recommendations, upcummies and more!",
  "version": "0.2.0",
  "background": {
    "persistent": true,
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "tabs",
    "contextMenus",
    "storage",
    "*://www.youtube.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://www.youtube.com/*"
      ],
      "css": [
        "hide_page.css"
      ]
    }
  ],
  "browser_action": {
    "default_popup": "settings_panel.html",
    "default_title": "YT-Shell Settings"
  }
}