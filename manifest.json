{
  "manifest_version": 3,
  "name": "YT-Shell",
  "description": "Stay focused while using YouTube, block recommendations, upcummies & more.",
  "version": "0.3.5",
  "permissions": [
    "tabs",
    "storage",
    "contextMenus",
    "scripting"
  ],
  "host_permissions": [
    "*://www.youtube.com/*"
  ],
  "background": {
    "service_worker": "main.js"
  },
  "action": {
    "default_title": "YT-Shell - Settings",
    "default_popup": "settings_panel/popup.html"
  },
  "icons": {
    "16": "img/icon-16.png",
    "32": "img/icon-32.png",
    "48": "img/icon-48.png",
    "64": "img/icon-64.png",
    "128": "img/icon-128.png",
    "256": "img/icon-256.png",
    "300": "img/icon-300.png",
    "512": "img/icon-512.png"
  }
}